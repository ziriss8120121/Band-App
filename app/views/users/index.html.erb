<div class="container">
  <div class="row">
    <div class='mx-auto col-sm-12 col-md-8 col-lg-5 px-sm-0 mt-3 text-center'>
      <h2 style="font-family: 'Times New Roman', serif;">Users</h2>
      <table class='table table-hover table-inverse'>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'default-image.jpg', size: '80x80', style: 'border-radius: 50%;' %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= link_to user_path(user) do %>
                  <h3><%= user.name %></h3>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>